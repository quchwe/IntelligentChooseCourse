<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:layout_margin="15dp"
              android:orientation="vertical" >
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">
    <TextView
    android:id="@+id/tv_todayCourse"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:padding="5dp"
    android:gravity="left|center"
    android:textSize="14sp"
    />
    <TextView
         android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:layout_marginRight="10dp"
        android:gravity="right|center"
        android:textSize="14sp"
        android:text="今日课程"
        />
</LinearLayout>
    <ListView
        android:id="@id/android:list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="20dp"
        android:padding="5dp"
        android:background="#ccedc7"
        />


    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_margin="5dp"
        android:background="@android:color/darker_gray"
        ></View>

    <Button
        android:id="@+id/btn_grade"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:gravity="left|center"
        android:drawableLeft="@mipmap/message"
        android:textColor="@android:color/holo_blue_light"
        android:drawableRight="@mipmap/youjiantou"
        android:text="成绩查询"
        android:background="@android:color/transparent"
        />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_margin="5dp"
        android:paddingLeft="15dp"
        android:background="@android:color/darker_gray"
        ></View>



    <Button
        android:id="@+id/btn_testTime"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:gravity="left|center"
        android:drawableLeft="@mipmap/message"
        android:textColor="@android:color/holo_blue_light"
        android:drawableRight="@mipmap/youjiantou"
        android:text="考试倒计时"
        android:background="@android:color/transparent"
        />
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_margin="5dp"
        android:paddingLeft="15dp"
        android:background="@android:color/darker_gray"
        ></View>
    <Button
        android:id="@+id/btn_suishouji"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:gravity="left|center"
        android:drawableLeft="@mipmap/message"
        android:textColor="@android:color/holo_blue_light"
        android:drawableRight="@mipmap/youjiantou"
        android:text="随手记"
        android:background="@android:color/transparent"
        />
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_margin="5dp"
        android:paddingLeft="15dp"
        android:background="@android:color/darker_gray"
        ></View>
    <Button
        android:id="@+id/btn_XinxituiSong"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:gravity="left|center"
        android:drawableLeft="@mipmap/message"
        android:textColor="@android:color/holo_blue_light"
        android:drawableRight="@mipmap/youjiantou"
        android:text="信息推送"
        android:background="@android:color/transparent"
        />



</LinearLayout>