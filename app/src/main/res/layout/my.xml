<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:scrollbars="vertical"
              >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <android.support.v7.widget.Toolbar xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/blue">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                >
                <Button
                    android:id="@+id/btn_myinfo_back"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@mipmap/backbutton"
                    android:background="@android:color/transparent"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:gravity="left|center"
                    android:text=" 返回"
                    android:textColor="@android:color/white"

                    />
                <TextView android:id="@+id/tv_interest_textTile"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:textColor="@color/white"
                    android:textSize="18sp"
                    android:text="个人信息"
                    />
                <Button
                    android:id="@+id/btn_myinfo_save"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:textColor="@android:color/white"
                    android:text="保存"
                    android:background="@android:color/transparent"/>
            </RelativeLayout>
        </android.support.v7.widget.Toolbar>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_margin="10dp">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/message"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="个人信息"
            android:layout_gravity="center_vertical"
            android:layout_margin="10dp"/>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_margin="2dp"
        android:background="@color/dark_blue"/>
        <Button
            android:id="@+id/btn_interest"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:layout_marginRight="10dp"
            android:text="  个人兴趣"
            android:layout_marginLeft="25dp"
            android:textSize="17sp"
            android:gravity="left|center"
            android:textColor="@color/black"
            android:drawableRight="@mipmap/youjiantou"
            android:background="@android:color/transparent"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
       android:layout_marginLeft="15dp"
        android:padding="10dp"
        >
        <TextView
            android:id="@+id/tv_realName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="真实姓名:"
            android:textSize="16sp"
            android:textColor="@color/dark_blue"
            android:layout_marginLeft="15dp"
            android:layout_centerVertical="true"/>
        <EditText
            android:id="@+id/et_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:hint="未填写"
            android:gravity="center"
           android:layout_toRightOf="@+id/tv_realName" />
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:padding="10dp"
        >
        <TextView
            android:id="@+id/tv_birthday"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="出生日期:"
            android:textSize="16sp"
            android:textColor="@color/dark_blue"
            android:layout_marginLeft="15dp"
            android:layout_centerVertical="true"/>
        <EditText
            android:id="@+id/et_birthday"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:hint="未填写"
            android:gravity="center"
            android:layout_toRightOf="@+id/tv_birthday" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:padding="10dp"
        >
        <TextView
            android:id="@+id/tv_school"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="学校  :"
            android:textSize="16sp"
            android:textColor="@color/dark_blue"
            android:layout_marginLeft="15dp"
            android:layout_centerVertical="true"/>
        <EditText
            android:id="@+id/et_school"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:hint="未填写"
            android:gravity="center"
            android:layout_toRightOf="@+id/tv_school" />
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:padding="10dp"
        >
        <TextView
            android:id="@+id/tv_ruxueDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="入学日期:"
            android:textSize="16sp"
            android:textColor="@color/dark_blue"
            android:layout_marginLeft="15dp"
            android:layout_centerVertical="true"/>
        <EditText
            android:id="@+id/et_ruxuedate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:hint="未填写"
            android:gravity="center"
            android:layout_toRightOf="@+id/tv_ruxueDate" />
    </RelativeLayout>
    </LinearLayout>
</ScrollView>
