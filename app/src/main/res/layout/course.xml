<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@android:color/white"
    android:orientation="vertical">


    <Button
        android:id="@+id/btn_kexuan"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="10dp"
        android:text="  可选课程"
        android:background="@android:color/transparent"
        android:layout_margin="10dp"
        android:gravity="left|center"
        android:textColor="@color/black"
        android:drawableRight="@mipmap/arror"
        android:drawableLeft="@mipmap/suningicon"
        android:textSize="18sp"/>
    <ListView
        android:id="@id/android:list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="15dp"
        android:visibility="gone"
        ></ListView>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:background="@android:color/darker_gray"
        ></View>
    <Button
        android:id="@+id/btn_choosed"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="10dp"
        android:text="  已选课程"
        android:background="@android:color/transparent"
        android:layout_margin="10dp"
        android:gravity="left|center"
        android:textColor="@color/black"
        android:drawableRight="@mipmap/youjiantou"
        android:drawableLeft="@mipmap/wuaiicon"
        android:textSize="18sp"/>

    <Button
        android:id="@+id/btn_tuijian"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="10dp"
        android:text="  推荐课程"
        android:background="@android:color/transparent"
        android:layout_margin="10dp"
        android:gravity="left|center"
        android:textColor="@color/blue"
        android:drawableRight="@mipmap/youjiantou"
        android:drawableLeft="@mipmap/hwnglongicon"
        android:textSize="18sp"/>

</LinearLayout>
