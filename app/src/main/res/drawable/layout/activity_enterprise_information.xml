<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:scrollbars="vertical"
    tools:context="com.example.administrator.zhihuidianti.activity.information_center.EnterpriseInformationActivity">
<LinearLayout

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"

   >

    <android.support.v7.widget.Toolbar
        android:id="@+id/tb_enterprise_infomation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/dark_blue">
        <ImageButton
            android:id="@+id/ib_enterprise_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/btn_fanhui"
            android:background="@color/dark_blue"/>
        <TextView
            android:id="@+id/tv_enterpriseTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="企业基本信息"
            android:layout_marginRight="@dimen/title_margin_right"
            android:gravity="center_horizontal"
            android:textColor="@color/white"
            android:textSize="@dimen/title_text_size"
            />
    </android.support.v7.widget.Toolbar>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >


        <Button
            android:id="@+id/btn_companyInformation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/title_text_size"
            android:text="单位基本信息"
            android:gravity="left|center"
            android:layout_marginLeft="@dimen/list_item_margin_left"
            android:layout_marginRight="10dp"
            android:textColor="@color/dark_blue"
            android:drawableRight="@mipmap/youjiantou"
            android:background="@android:color/transparent"/>
    </LinearLayout>

    <ListView
        android:id="@+id/lv_companyInformation"
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:visibility="gone"
        ></ListView>
    <Button
        android:id="@+id/btn_elevatorInformation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="@dimen/title_text_size"
        android:text="电梯基本信息"
        android:gravity="left|center"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:textColor="@color/dark_blue"
        android:drawableRight="@mipmap/youjiantou"
        android:background="@android:color/transparent"/>
    <ListView
        android:id="@+id/lv_elevatorInformation"
        android:layout_width="match_parent"
        android:layout_height="330dp"
        android:visibility="gone"></ListView>

</LinearLayout>
</ScrollView>
