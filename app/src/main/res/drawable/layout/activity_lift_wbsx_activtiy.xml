<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">
    <include
        layout="@layout/titlebar"></include>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingTop="10dp"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:background="@drawable/zhengjiao_textview_blue"
            android:layout_weight="1"
            android:text="类别"></TextView>
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:background="@drawable/zhengjiao_textview_blue"
            android:layout_weight="2"
            android:text="作业项目"></TextView>
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:background="@drawable/zhengjiao_textview_blue"
            android:layout_weight="3"
            android:text="作业及确认内容"></TextView>
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:background="@drawable/zhengjiao_textview_blue"
            android:text="结论"
            android:layout_weight="1"></TextView>

    </LinearLayout>
    <ListView
        android:id="@+id/lv_liftwbsx"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"></ListView>
    <LinearLayout
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="7"
        >

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:paddingTop="15dp"
            android:paddingBottom="15dp"
            android:background="@drawable/zhengjiao_textview_blue"
            android:text="报告"
            android:layout_weight="1"/>
        <EditText
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:paddingTop="15dp"
            android:paddingBottom="15dp"
            android:background="@drawable/zhengjiao_textview"

            android:layout_weight="6"
            />

    </LinearLayout>
    <Button
        android:id="@+id/btn_querenpingjia"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="15dp"
        android:textSize="@dimen/middle_text"
        android:textColor="@android:color/white"
        android:text="确认评价"
        android:background="@drawable/round_buton_orange"/>

</LinearLayout>
