<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    tools:context="com.example.administrator.zhihuidianti.activity.DiantizijianmingxiActivity">

    <include layout="@layout/titlebar"></include>
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/diantiweixiudan"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="20dp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/main_text_size"
            android:text="发现人"
            android:layout_marginTop="@dimen/biankuangjvli"
            android:layout_marginLeft="@dimen/biankuangjvli"/>
        <EditText
            android:id="@+id/et_faxianren"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/main_text_size"
            android:background="@drawable/textview_border"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:layout_marginTop="@dimen/biankuangjvli"
            android:layout_marginRight="36px"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/main_text_size"
            android:text="发生日期"
            android:layout_marginTop="@dimen/biankuangjvli"
            android:layout_marginLeft="@dimen/biankuangjvli"/>
        <TextView
            android:id="@+id/tv_fashengriqi1"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:textSize="@dimen/main_text_size"
            android:background="@drawable/spinner_border"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:layout_marginTop="@dimen/biankuangjvli"
            android:layout_marginRight="@dimen/biankuangjvli"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/main_text_size"
            android:text="至"
            android:layout_marginTop="@dimen/biankuangjvli"/>
        <TextView
            android:id="@+id/tv_fashengriqi2"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:textSize="@dimen/main_text_size"
            android:background="@drawable/spinner_border"
            android:layout_marginLeft="@dimen/biankuangjvli"
            android:layout_marginTop="@dimen/biankuangjvli"
            android:layout_marginRight="@dimen/activity_horizontal_margin"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/main_text_size"
            android:text="维修状态"
            android:layout_marginTop="@dimen/biankuangjvli"
            android:layout_marginLeft="@dimen/biankuangjvli"/>
        <TextView
            android:id="@+id/tv_weixiuzhuangtai"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/main_text_size"
            android:background="@drawable/textview_border"
            android:drawableRight="@mipmap/arrow"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:layout_marginTop="@dimen/biankuangjvli"
            android:layout_marginRight="@dimen/biankuangjvli"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/main_text_size"
            android:text="整改超期"
            android:layout_marginTop="@dimen/biankuangjvli"
            android:layout_marginLeft="@dimen/biankuangjvli"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="已整改"
            android:textSize="@dimen/main_text_size"
            android:layout_marginLeft="45dp"
            android:layout_marginTop="@dimen/biankuangjvli"
            android:layout_marginRight="@dimen/biankuangjvli"
            />
        <ImageButton
            android:id="@+id/ib_zhengaichaoqi_dtwxdan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:layout_marginTop="@dimen/activity_horizontal_margin"
            android:src="@mipmap/anniu"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="未整改"
            android:textSize="@dimen/main_text_size"
            android:layout_marginLeft="@dimen/biankuangjvli"
            android:layout_marginTop="@dimen/biankuangjvli"
            android:layout_marginRight="@dimen/biankuangjvli"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/main_text_size"
            android:text="维修日期"
            android:layout_marginTop="@dimen/biankuangjvli"
            android:layout_marginLeft="@dimen/biankuangjvli"/>
        <TextView
            android:id="@+id/tv_weixiuriqi1"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:textSize="@dimen/main_text_size"
            android:background="@drawable/spinner_border"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:layout_marginTop="@dimen/biankuangjvli"
            android:layout_marginRight="@dimen/biankuangjvli"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/main_text_size"
            android:text="至"
            android:layout_marginTop="@dimen/biankuangjvli"/>
        <TextView
            android:id="@+id/tv_weixiuriqi2"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:textSize="@dimen/main_text_size"
            android:background="@drawable/spinner_border"
            android:layout_marginLeft="@dimen/biankuangjvli"
            android:layout_marginTop="@dimen/biankuangjvli"
            android:layout_marginRight="@dimen/activity_horizontal_margin"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/main_text_size"
            android:text="维修类型"
            android:layout_marginTop="@dimen/biankuangjvli"
            android:layout_marginLeft="@dimen/biankuangjvli"/>
        <TextView
            android:id="@+id/tv_weixiuleixing"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/main_text_size"
            android:background="@drawable/textview_border"
            android:drawableRight="@mipmap/arrow"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:layout_marginTop="@dimen/biankuangjvli"
            android:layout_marginRight="@dimen/biankuangjvli"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingTop="30dp"
        android:paddingRight="@dimen/activity_horizontal_margin">
        <Button
            android:id="@+id/btn_chaxun_dtwxdan"
            android:layout_width="100dp"
            android:layout_height="35dp"
            android:textSize="@dimen/main_text_size"
            android:text="查询"
            android:textColor="@color/white"
            android:background="@drawable/button"
            android:layout_weight="1"
            android:layout_marginTop="@dimen/biankuangjvli"
            android:layout_marginLeft="@dimen/biankuangjvli"/>
        <Button
            android:id="@+id/btn_excel_dtwxdan"
            android:layout_width="100dp"
            android:layout_height="35dp"
            android:textSize="@dimen/main_text_size"
            android:text="Excel"
            android:textColor="@color/white"
            android:background="@drawable/button"
            android:layout_weight="1"
            android:layout_marginTop="@dimen/biankuangjvli"
            android:layout_marginLeft="20dp"/>
        <Button
            android:id="@+id/btn_tixing_dtwxdan"
            android:layout_width="100dp"
            android:layout_height="35dp"
            android:textSize="@dimen/main_text_size"
            android:text="维修提醒"
            android:textColor="@color/white"
            android:background="@drawable/button"
            android:layout_weight="1"
            android:layout_marginTop="@dimen/biankuangjvli"
            android:layout_marginLeft="20dp"/>
    </LinearLayout>

</LinearLayout>
