<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    tools:context=".activity.WeibaochaoqitixingActivity">
    <android.support.v7.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/darkblue">
        <ImageButton
            android:id="@+id/ib_weibaochaoqitixing_fanhui"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/btn_fanhui"
            android:background="@color/darkblue"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="          电梯维保超期提醒"
            android:textColor="@color/white"
            android:textSize="20dp"
            />
    </android.support.v7.widget.Toolbar>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/diantiweibaobiaoti"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="20dp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/main_text_size"
            android:text="维保单位"
            android:layout_marginTop="@dimen/biankuangjvli"
            android:layout_marginLeft="@dimen/biankuangjvli"/>
        <EditText
            android:id="@+id/et_weibaodanwei"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/textview_border"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:layout_marginTop="@dimen/biankuangjvli"
            android:layout_marginRight="@dimen/biankuangjvli"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/main_text_size"
            android:text="是否超期"
            android:layout_marginTop="@dimen/biankuangjvli"
            android:layout_marginLeft="@dimen/biankuangjvli"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="是"
            android:textSize="@dimen/main_text_size"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="@dimen/biankuangjvli"
            android:layout_marginRight="@dimen/biankuangjvli"
            />
        <ImageButton
            android:id="@+id/ib_shifouchaoqi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:layout_marginTop="@dimen/activity_horizontal_margin"
            android:src="@mipmap/anniu"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="否"
            android:textSize="@dimen/main_text_size"
            android:layout_marginLeft="@dimen/biankuangjvli"
            android:layout_marginTop="@dimen/biankuangjvli"
            android:layout_marginRight="@dimen/biankuangjvli"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="10"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/main_text_size"
            android:text="维保合同有效期"
            android:layout_marginRight="1dp"
            android:layout_marginTop="@dimen/biankuangjvli"
            android:layout_marginLeft="@dimen/biankuangjvli"/>
        <TextView
            android:id="@+id/tv_youxiaoqi1"
            android:layout_width="0dp"
            android:layout_weight="5"
            android:layout_height="wrap_content"
            android:textSize="@dimen/main_text_size"
            android:background="@drawable/spinner_border"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:layout_marginTop="@dimen/biankuangjvli"
            android:layout_marginRight="@dimen/biankuangjvli"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/main_text_size"
            android:text="至"
            android:layout_marginTop="@dimen/biankuangjvli"/>
        <TextView
            android:id="@+id/tv_youxiaoqi2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="5"
            android:textSize="@dimen/main_text_size"
            android:background="@drawable/spinner_border"
            android:layout_marginLeft="@dimen/biankuangjvli"
            android:layout_marginTop="@dimen/biankuangjvli"
            android:layout_marginRight="@dimen/activity_horizontal_margin"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/main_text_size"
            android:text="维保联系人"
            android:layout_marginTop="@dimen/biankuangjvli"
            android:layout_marginLeft="@dimen/biankuangjvli"/>
        <EditText
            android:id="@+id/et_weibaolianxiren"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/textview_border"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:layout_marginTop="@dimen/biankuangjvli"
            android:layout_marginRight="@dimen/biankuangjvli"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/main_text_size"
            android:text="维保合同编号"
            android:layout_marginTop="@dimen/biankuangjvli"
            android:layout_marginLeft="@dimen/biankuangjvli"/>
        <EditText
            android:id="@+id/et_weibaohetongbianhao"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/textview_border"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:layout_marginTop="@dimen/biankuangjvli"
            android:layout_marginRight="@dimen/biankuangjvli"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/main_text_size"
            android:text="电梯使用设备名称"
            android:layout_marginTop="@dimen/biankuangjvli"
            android:layout_marginLeft="@dimen/biankuangjvli"/>
        <EditText
            android:id="@+id/et_diantishiyongshebei"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/textview_border"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:layout_marginTop="@dimen/biankuangjvli"
            android:layout_marginRight="@dimen/biankuangjvli"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/main_text_size"
            android:text="设备所在区域"
            android:layout_marginTop="13dp"
            android:layout_marginLeft="@dimen/biankuangjvli"/>
        <TextView
            android:id="@+id/tv_suozaiquyu1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/main_text_size"
            android:background="@drawable/textview_border"
            android:drawableRight="@mipmap/zhongjianxiala"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:layout_marginTop="@dimen/biankuangjvli"
            android:layout_weight="1"
            />
        <TextView
            android:id="@+id/tv_suozaiquyu2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/main_text_size"
            android:background="@drawable/textview_border"
            android:drawableLeft="@mipmap/kongbai"
            android:drawableRight="@mipmap/arrow"
            android:layout_marginTop="@dimen/biankuangjvli"
            android:layout_marginRight="@dimen/biankuangjvli"
            android:layout_weight="1"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/main_text_size"
            android:text="设备使用地点"
            android:layout_marginTop="@dimen/biankuangjvli"
            android:layout_marginLeft="@dimen/biankuangjvli"/>
        <EditText
            android:id="@+id/et_shiyongdidian"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/textview_border"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:layout_marginTop="@dimen/biankuangjvli"
            android:layout_marginRight="@dimen/biankuangjvli"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/main_text_size"
            android:text="电梯使用编号"
            android:layout_marginTop="@dimen/biankuangjvli"
            android:layout_marginLeft="@dimen/biankuangjvli"/>
        <EditText
            android:id="@+id/et_diantishiyongbianhao"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/textview_border"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:layout_marginTop="@dimen/biankuangjvli"
            android:layout_marginRight="@dimen/biankuangjvli"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingTop="30dp"
        android:paddingRight="@dimen/activity_horizontal_margin">
        <Button
            android:id="@+id/btn_chaxun_weibaochaoqitixing"
            android:layout_width="100dp"
            android:layout_height="35dp"
            android:textSize="@dimen/main_text_size"
            android:text="查询"
            android:textColor="@color/white"
            android:background="@drawable/button"
            android:layout_weight="1"
            android:layout_marginTop="@dimen/biankuangjvli"
            android:layout_marginLeft="@dimen/biankuangjvli"/>
        <Button
            android:id="@+id/btn_excel_weibaochaoqitixing"
            android:layout_width="100dp"
            android:layout_height="35dp"
            android:textSize="@dimen/main_text_size"
            android:text="Excel"
            android:textColor="@color/white"
            android:background="@drawable/button"
            android:layout_weight="1"
            android:layout_marginTop="@dimen/biankuangjvli"
            android:layout_marginLeft="20dp"/>
        <Button
            android:id="@+id/btn_tixing_weibaochaoqitixing"
            android:layout_width="100dp"
            android:layout_height="35dp"
            android:textSize="@dimen/main_text_size"
            android:text="维保提醒"
            android:textColor="@color/white"
            android:background="@drawable/button"
            android:layout_weight="1"
            android:layout_marginTop="@dimen/biankuangjvli"
            android:layout_marginLeft="20dp"/>
    </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>
