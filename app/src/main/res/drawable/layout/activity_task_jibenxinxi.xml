<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
    android:scrollbars="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/title_height"
        android:background="@color/darkblue">
        <Button
            android:id="@+id/btn_messageback"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:drawableLeft="@mipmap/back"
            android:textColor="@color/white"
            android:background="@color/transparent"
            android:text="返回"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:textSize="@dimen/middle_text"
            android:textColor="@color/white"
            android:text="基本情况和技术参数"
            />
    </RelativeLayout>
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ListView
        android:id="@+id/lv_message"
        android:layout_width="130dp"
        android:layout_height="1300dp"
        android:dividerHeight="3px"
        android:headerDividersEnabled="true"
        android:scrollbars="none"
        android:layout_alignParentLeft="true"
        android:background="@color/grey"
        />
    <ListView
        android:id="@+id/lv_message2"
        android:layout_width="600dp"
        android:layout_height="1300dp"
        android:dividerHeight="2px"
        android:headerDividersEnabled="true"
       android:layout_toRightOf="@+id/lv_message">

    </ListView>
    <CheckBox
        android:id="@+id/cb_zaihuo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="365dp"
        android:layout_alignParentRight="true"
        android:layout_marginRight="15dp"
        android:text="载货电梯"/>
    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="365dp"
        android:layout_toLeftOf="@+id/cb_zaihuo"
        android:layout_marginRight="15dp"
        android:text="乘客电梯"/>
    <CheckBox
        android:id="@+id/cb_qiangzhi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="800dp"
        android:layout_alignParentRight="true"
        android:layout_marginRight="15dp"
        android:text="强制式"/>
    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="800dp"
        android:layout_toLeftOf="@+id/cb_zaihuo"
        android:layout_marginRight="20dp"
        android:text="曳引式"/>
    <CheckBox
        android:id="@+id/cb_zizhun"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/lv_message"
        android:layout_marginTop="1030dp"
        android:layout_marginLeft="20dp"
        android:text="OM至尊合同"/>
    <CheckBox
        android:id="@+id/cb_guibin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/cb_zizhun"
        android:layout_toRightOf="@+id/lv_message"
        android:layout_marginLeft="@dimen/dp_20"
        android:text="POG贵宾合同"/>
    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/cb_guibin"
        android:layout_toRightOf="@+id/lv_message"
        android:layout_marginLeft="20dp"
        android:text="NIS免保合同"/>

</RelativeLayout>
    </LinearLayout>
</ScrollView>