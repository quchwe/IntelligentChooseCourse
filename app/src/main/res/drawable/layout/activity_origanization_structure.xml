<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.administrator.zhihuidianti.activity.information.enterprise.OriganizationStructureActivity">
    <android.support.v7.widget.Toolbar
        android:id="@+id/tb_enterprise_infomation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/dark_blue">
        <ImageButton
            android:id="@+id/ib_orgnization_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/btn_fanhui"
            android:background="@color/dark_blue"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="组织架构图"
            android:layout_marginRight="@dimen/title_margin_right"
            android:gravity="center_horizontal"
            android:textColor="@color/white"
            android:textSize="@dimen/title_text_size"
            />
    </android.support.v7.widget.Toolbar>
    <ImageView
        android:id="@+id/iv_zuzhijiagou"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_centerInParent="true"


/>
</RelativeLayout>
