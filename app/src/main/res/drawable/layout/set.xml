<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="fill_parent"
              android:layout_height="fill_parent"
              android:background="@color/grey"
>
    <include layout="@layout/titlebar"></include>

    <ScrollView
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:scrollbars="vertical">
        <LinearLayout
                        android:layout_width="match_parent"
                      android:layout_height="fill_parent"
                      android:orientation="vertical"
        >
    <Button
            android:id="@+id/shuju"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="left|center"
            android:text="数据上传"
            android:background="@drawable/shape"
            android:textColor="@color/black"
            android:drawableRight="@mipmap/unselect"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:layout_marginTop="8dp"/>
    <Button android:id="@+id/wangluo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="left|center"
            android:text="网络开关"
            android:background="@drawable/shape"
            android:textColor="@color/black"
            android:drawableRight="@mipmap/unselect"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:layout_marginTop="8dp"
            />
    <Button android:id="@+id/gps"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="left|center"
            android:text="GPS开关"
            android:background="@drawable/shape"
            android:textColor="@color/black"
            android:drawableRight="@mipmap/unselect"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:layout_marginTop="1dp"
    />
    <Button android:id="@+id/qingchu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="left|center"
            android:text="清除缓存"
            android:background="@drawable/shape"
            android:textColor="@color/black"
            android:drawableRight="@mipmap/unselect"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:layout_marginTop="8dp"
    />
    <Button android:id="@+id/xunchagengxing"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="left|center"
            android:text="巡查信息更新"
            android:background="@drawable/shape"
            android:textColor="@color/black"
            android:drawableRight="@mipmap/youjiantou"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:layout_marginTop="8dp"
    />
    <Button android:id="@+id/jianchagengxing"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="left|center"
            android:text="检查更新"
            android:background="@drawable/shape"
            android:textColor="@color/black"
            android:drawableRight="@mipmap/youjiantou"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:layout_marginTop="1dp"
    />
    <Button android:id="@+id/gonggao"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="left|center"
            android:text="系统公告"
            android:background="@drawable/shape"
            android:textColor="@color/black"
            android:drawableRight="@mipmap/youjiantou"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:layout_marginTop="1dp"
    />
    <Button android:id="@+id/fankui"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="left|center"
            android:text="意见反馈"
            android:background="@drawable/shape"
            android:textColor="@color/black"
            android:drawableRight="@mipmap/youjiantou"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:layout_marginTop="1dp"
    />
    <Button android:id="@+id/xiugaimima"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="left|center"
            android:text="修改密码"
            android:background="@drawable/shape"
            android:textColor="@color/black"
            android:drawableRight="@mipmap/youjiantou"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:layout_marginTop="1dp"


    />

    <Button android:id="@+id/exit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="退出登录"
            android:background="@drawable/shape"
            android:textColor="@color/red"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"

    />
        </LinearLayout>
    </ScrollView>
</LinearLayout>

