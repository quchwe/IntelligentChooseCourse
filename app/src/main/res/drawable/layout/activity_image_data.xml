<?xml version="1.0" encoding="utf-8"?>
<LinearLayout

    android:id="@+id/ly_image_data"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    tools:context="com.example.administrator.zhihuidianti.activity.information.enterprise.ImageDataActivity">
    <RelativeLayout
        android:id="@+id/tb_enterprise_infomation"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:background="@color/dark_blue"
        >
        <ImageButton
            android:id="@+id/ib_imageData_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/btn_fanhui"
            android:layout_marginLeft="10dp"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:background="@color/dark_blue"/>
        <TextView
            android:id="@+id/tv_imageData_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="影像资料"
            android:gravity="center_horizontal"
            android:layout_centerInParent="true"
            android:textColor="@color/white"
            android:textSize="@dimen/title_text_size"
            />
        <ImageButton
            android:id="@+id/pop_menu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/menu"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@color/dark_blue"
            android:layout_marginRight="10dp"/>
    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
    <EditText
        android:paddingRight="6dp"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:textColor="@color/black"
        android:id="@+id/et_imageData"
        android:gravity="center"
        android:layout_margin="15dp"
        android:layout_width="match_parent"
        android:background="@drawable/search_edit_text"
        android:hint="文件名"
        android:editable="false"
        android:textSize="18sp"
        android:layout_height="wrap_content" />
    <ListView
        android:id="@+id/lv_imageData"
        android:layout_width="match_parent"
        android:divider="@color/grey"
        android:dividerHeight="8dp"
        android:layout_height="wrap_content"></ListView>

    </LinearLayout>
</LinearLayout>
