<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <include
        layout="@layout/titlebar"

        />
    <LinearLayout
        android:layout_marginLeft="15dp"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:background="@color/darkblue"
            android:layout_width="6dp"
            android:layout_height="40dp" />
        <TextView
            android:layout_marginLeft="10dp"
            android:textSize="20sp"
            android:textColor="@color/darkblue"
            android:text="电梯维修明细"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_marginLeft="@dimen/layout_margin_left"
        android:layout_marginRight="@dimen/layout_margin_left"
        android:layout_marginTop="@dimen/layout_margin_left"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:textSize="@dimen/main_text_size"
            android:textColor="@color/black"
            android:text="发现人"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <EditText
            android:id="@+id/faxianren_edittext"
            android:gravity="center_horizontal"
            android:layout_marginLeft="@dimen/layout_margin_left"
            android:background="@drawable/textview_border"
            android:layout_width="match_parent"
            android:layout_height="@dimen/edittext_height" />
    </LinearLayout>

    <LinearLayout
        android:layout_marginLeft="@dimen/layout_margin_left"
        android:layout_marginRight="@dimen/layout_margin_left"
        android:layout_marginTop="@dimen/layout_margin_left"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_weight="1"
            android:layout_gravity="center_vertical"
            android:textSize="@dimen/main_text_size"
            android:textColor="@color/black"
            android:text="发现日期"
            android:layout_width="0dp"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_weight="1"
            android:textColor="@color/black"
            android:gravity="center"
            android:id="@+id/faxianriqi_textview_start"
            android:layout_marginLeft="@dimen/layout_margin_left"
            android:background="@drawable/deep_radius_textview_border"
            android:layout_width="0dp"
            android:layout_height="@dimen/edittext_height" />
        <TextView
            android:layout_marginLeft="@dimen/layout_margin_left"
            android:layout_gravity="center_vertical"
            android:textSize="@dimen/main_text_size"
            android:textColor="@color/black"
            android:text="至"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_weight="1"
            android:textColor="@color/black"
            android:gravity="center"
            android:id="@+id/faxianriqi_textview_end"
            android:layout_marginLeft="@dimen/layout_margin_left"
            android:background="@drawable/deep_radius_textview_border"
            android:layout_width="0dp"
            android:layout_height="@dimen/edittext_height" />
    </LinearLayout>

    <LinearLayout
        android:layout_marginLeft="@dimen/layout_margin_left"
        android:layout_marginRight="@dimen/layout_margin_left"
        android:layout_marginTop="@dimen/layout_margin_left"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_gravity="center_vertical"
            android:textSize="@dimen/main_text_size"
            android:textColor="@color/black"
            android:text="维修状态"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:text="已维修"
            android:textSize="16dp"
            android:textColor="@color/black"
            android:id="@+id/weixiuzhuangtai_textview"
            android:gravity="center"
            android:paddingRight="10dp"
            android:layout_marginLeft="@dimen/layout_margin_left"
            android:drawableRight="@mipmap/xialajiantou"
            android:background="@drawable/textview_border"
            android:layout_width="match_parent"
            android:layout_height="@dimen/edittext_height" />
    </LinearLayout>

    <LinearLayout
        android:visibility="gone"
        android:layout_marginLeft="@dimen/layout_margin_left"
        android:layout_marginRight="@dimen/layout_margin_left"
        android:layout_marginTop="@dimen/layout_margin_left"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_gravity="center_vertical"
            android:textSize="@dimen/main_text_size"
            android:textColor="@color/black"
            android:text="整改超期"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_marginLeft="35dp"
            android:layout_gravity="center_vertical"
            android:textSize="@dimen/main_text_size"
            android:textColor="@color/black"
            android:text="已整改"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <Button
            android:id="@+id/zhenggaichaoqi_button"
            android:layout_marginLeft="5dp"
            android:background="@mipmap/select"
            android:layout_width="wrap_content"
            android:layout_height="35dp" />
        <TextView
            android:layout_marginLeft="5dp"
            android:layout_gravity="center_vertical"
            android:textSize="@dimen/main_text_size"
            android:textColor="@color/black"
            android:text="未整改"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <LinearLayout
        android:layout_marginLeft="@dimen/layout_margin_left"
        android:layout_marginRight="@dimen/layout_margin_left"
        android:layout_marginTop="@dimen/layout_margin_left"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_weight="1"
            android:layout_gravity="center_vertical"
            android:textSize="@dimen/main_text_size"
            android:textColor="@color/black"
            android:text="维修日期"
            android:layout_width="0dp"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_weight="1"
            android:textColor="@color/black"
            android:gravity="center"
            android:id="@+id/weixiuriqi_textview_start"
            android:layout_marginLeft="@dimen/layout_margin_left"
            android:background="@drawable/deep_radius_textview_border"
            android:layout_width="0dp"
            android:layout_height="@dimen/edittext_height" />
        <TextView

            android:layout_marginLeft="@dimen/layout_margin_left"
            android:layout_gravity="center_vertical"
            android:textSize="@dimen/main_text_size"
            android:textColor="@color/black"
            android:text="至"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_weight="1"
            android:textColor="@color/black"
            android:gravity="center"
            android:id="@+id/weixiuriqi_textview_end"
            android:layout_marginLeft="@dimen/layout_margin_left"
            android:background="@drawable/deep_radius_textview_border"
            android:layout_width="0dp"
            android:layout_height="@dimen/edittext_height" />
    </LinearLayout>

    <LinearLayout
        android:layout_marginLeft="@dimen/layout_margin_left"
        android:layout_marginRight="@dimen/layout_margin_left"
        android:layout_marginTop="@dimen/layout_margin_left"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_gravity="center_vertical"
            android:textSize="@dimen/main_text_size"
            android:textColor="@color/black"
            android:text="维修类型"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:text="紧急"
            android:textSize="16dp"
            android:textColor="@color/black"
            android:id="@+id/weixiuleixin_textview"
            android:gravity="center"
            android:paddingRight="10dp"
            android:layout_marginLeft="@dimen/layout_margin_left"
            android:drawableRight="@mipmap/xialajiantou"
            android:background="@drawable/textview_border"
            android:layout_width="match_parent"
            android:layout_height="@dimen/edittext_height" />
    </LinearLayout>

    <LinearLayout
        android:layout_marginLeft="@dimen/layout_margin_left"
        android:layout_marginRight="@dimen/layout_margin_left"
        android:layout_marginTop="@dimen/layout_margin_left"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:textSize="@dimen/main_text_size"
            android:textColor="@color/black"
            android:text="电梯名称"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <EditText
            android:id="@+id/diantimingcheng_edittext"
            android:gravity="center_horizontal"
            android:layout_marginLeft="@dimen/layout_margin_left"
            android:background="@drawable/textview_border"
            android:layout_width="match_parent"
            android:layout_height="@dimen/edittext_height" />
    </LinearLayout>

    <LinearLayout
        android:layout_marginLeft="@dimen/layout_margin_left"
        android:layout_marginRight="@dimen/layout_margin_left"
        android:layout_marginTop="@dimen/layout_margin_left"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:textSize="@dimen/main_text_size"
            android:textColor="@color/black"
            android:text="维保单位"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <EditText
            android:id="@+id/weibaodanwei_edittext"
            android:gravity="center_horizontal"
            android:layout_marginLeft="@dimen/layout_margin_left"
            android:background="@drawable/textview_border"
            android:layout_width="match_parent"
            android:layout_height="@dimen/edittext_height" />
    </LinearLayout>
<CheckBox
    android:checked="true"
    android:layout_marginTop="@dimen/layout_margin_left"
    android:id="@+id/paidan_checkbox"
    android:text="维保单位是否派单"
    android:layout_marginLeft="80dp"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content" />

    <LinearLayout
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="@dimen/layout_margin_left"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Button
            android:textColor="@color/white"
            android:layout_marginLeft="10dp"
            android:id="@+id/dtwxdmx_chaxun"
            android:text="查询"
            android:background="@drawable/roundbutton_blue"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="35dp" />
        <Button
            android:textColor="@color/white"
            android:layout_marginLeft="10dp"
            android:id="@+id/dtwxdmx_excel"
            android:text="Excel"
            android:background="@drawable/roundbutton_blue"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="35dp" />
        <Button
            android:textColor="@color/white"
            android:layout_marginLeft="10dp"
            android:id="@+id/dtwxdmx_weixiutixing"
            android:text="维修提醒"
            android:background="@drawable/roundbutton_blue"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="35dp" />
    </LinearLayout>
</LinearLayout>