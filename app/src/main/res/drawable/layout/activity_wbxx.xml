<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    tools:context="com.example.administrator.zhihuidianti.activity.DiantizijianmingxiActivity">

    <include layout="@layout/titlebar"></include>
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/diantiyinhuanxinxi"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="20dp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/main_text_size"
            android:text="发现人id"
            android:layout_marginTop="@dimen/biankuangjvli"
            android:layout_marginLeft="@dimen/biankuangjvli"/>
        <EditText
            android:id="@+id/et_faxianren"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/main_text_size"
            android:background="@drawable/textview_border"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:layout_marginTop="@dimen/biankuangjvli"
            android:layout_marginRight="36px"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="10"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/main_text_size"
            android:text="整改日期"
            android:layout_marginTop="@dimen/biankuangjvli"
            android:layout_marginLeft="@dimen/biankuangjvli"/>
        <TextView
            android:id="@+id/tv_zhenggairiqi1_wbxx"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="5"
            android:textSize="@dimen/main_text_size"
            android:background="@drawable/spinner_border"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:layout_marginTop="@dimen/biankuangjvli"
            android:layout_marginRight="@dimen/biankuangjvli"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/main_text_size"
            android:text="至"
            android:layout_marginTop="@dimen/biankuangjvli"/>
        <TextView
            android:id="@+id/tv_zhenggairiqi2_wbxx"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="5"
            android:textSize="@dimen/main_text_size"
            android:background="@drawable/spinner_border"
            android:layout_marginLeft="@dimen/biankuangjvli"
            android:layout_marginTop="@dimen/biankuangjvli"
            android:layout_marginRight="@dimen/activity_horizontal_margin"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/main_text_size"
            android:text="整改状态"
            android:layout_marginTop="@dimen/biankuangjvli"
            android:layout_marginLeft="@dimen/biankuangjvli"/>
        <TextView
            android:id="@+id/tv_zhenggaizhuangtai_wbxx"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/main_text_size"
            android:background="@drawable/textview_border"
            android:drawableRight="@mipmap/arrow"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:layout_marginTop="@dimen/biankuangjvli"
            android:layout_marginRight="@dimen/biankuangjvli"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/main_text_size"
            android:text="整改超期"
            android:layout_marginTop="@dimen/biankuangjvli"
            android:layout_marginLeft="@dimen/biankuangjvli"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="已整改"
            android:textSize="@dimen/main_text_size"
            android:layout_marginLeft="45dp"
            android:layout_marginTop="@dimen/biankuangjvli"
            android:layout_marginRight="@dimen/biankuangjvli"
            />
        <ImageButton
            android:id="@+id/ib_zhengaichaoqi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:layout_marginTop="@dimen/activity_horizontal_margin"
            android:src="@mipmap/anniu"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="未整改"
            android:textSize="@dimen/main_text_size"
            android:layout_marginLeft="@dimen/biankuangjvli"
            android:layout_marginTop="@dimen/biankuangjvli"
            android:layout_marginRight="@dimen/biankuangjvli"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/main_text_size"
            android:text="发现日期"
            android:layout_marginTop="@dimen/biankuangjvli"
            android:layout_marginLeft="@dimen/biankuangjvli"/>
        <TextView
            android:id="@+id/tv_faxianriqi1_wbxx"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:textSize="@dimen/main_text_size"
            android:background="@drawable/spinner_border"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:layout_marginTop="@dimen/biankuangjvli"
            android:layout_marginRight="@dimen/biankuangjvli"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/main_text_size"
            android:text="至"
            android:layout_marginTop="@dimen/biankuangjvli"/>
        <TextView
            android:id="@+id/tv_faxianriqi2_wbxx"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:textSize="@dimen/main_text_size"
            android:background="@drawable/spinner_border"
            android:layout_marginLeft="@dimen/biankuangjvli"
            android:layout_marginTop="@dimen/biankuangjvli"
            android:layout_marginRight="@dimen/activity_horizontal_margin"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/main_text_size"
            android:text="隐患名称"
            android:layout_marginTop="@dimen/biankuangjvli"
            android:layout_marginLeft="@dimen/biankuangjvli"/>
        <EditText
            android:id="@+id/et_yinhuanmingcheng_wbxx"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/main_text_size"
            android:background="@drawable/textview_border"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:layout_marginTop="@dimen/biankuangjvli"
            android:layout_marginRight="36px"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingTop="30dp"
        android:paddingRight="@dimen/activity_horizontal_margin">
        <Button
            android:id="@+id/btn_chaxun_wbxx"
            android:layout_width="100dp"
            android:layout_height="35dp"
            android:textSize="@dimen/main_text_size"
            android:text="查询"
            android:textColor="@color/white"
            android:background="@drawable/button"
            android:layout_weight="1"
            android:layout_marginTop="@dimen/biankuangjvli"
            android:layout_marginLeft="@dimen/biankuangjvli"/>
        <Button
            android:id="@+id/btn_excel_wbxx"
            android:layout_width="100dp"
            android:layout_height="35dp"
            android:textSize="@dimen/main_text_size"
            android:text="Excel"
            android:textColor="@color/white"
            android:background="@drawable/button"
            android:layout_weight="1"
            android:layout_marginTop="@dimen/biankuangjvli"
            android:layout_marginLeft="20dp"/>
        <Button
            android:id="@+id/btn_tixing_wbxx"
            android:layout_width="100dp"
            android:layout_height="35dp"
            android:textSize="@dimen/main_text_size"
            android:text="隐患整改提醒"
            android:textColor="@color/white"
            android:background="@drawable/button"
            android:layout_weight="1"
            android:layout_marginTop="@dimen/biankuangjvli"
            android:layout_marginLeft="20dp"/>
    </LinearLayout>

</LinearLayout>
