<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="wrap_content"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@color/white"
android:orientation="vertical"
tools:context="com.example.administrator.zhihuidianti.activity.LGJ.QuerenpingjiaxinxiActivity">
    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:stretchColumns="0"
        android:background="@color/white">
        <TableRow>
            <TextView
                android:layout_height="match_parent"
                android:layout_width="match_parent"
                android:gravity="center_horizontal|center_vertical"
                android:background="@drawable/table_frame_gray"
                android:text="服务态度"/>
            <RadioGroup
                android:id="@+id/rg_fuwutaidu"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:background="@drawable/table_frame_white">
                <RadioButton
                    android:id="@+id/rb_feichangmanyi"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="非常满意"/>
                <RadioButton
                    android:id="@+id/rb_manyi"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="满意"/>
                <RadioButton
                    android:id="@+id/rb_yiban"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="一般"/>
                <RadioButton
                    android:id="@+id/rb_bumanyi"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="不满意"/>
            </RadioGroup>
        </TableRow>
        <TableRow>
            <TextView
                android:layout_height="match_parent"
                android:layout_width="match_parent"
                android:gravity="center_horizontal|center_vertical"
                android:background="@drawable/table_frame_gray"
                android:text="保养质量"/>
            <RadioGroup
                android:id="@+id/rg_baoyangzhiliang"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:background="@drawable/table_frame_white">
                <RadioButton
                    android:id="@+id/rb_feichangmanyi1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="非常满意"/>
                <RadioButton
                    android:id="@+id/rb_manyi1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="满意"/>
                <RadioButton
                    android:id="@+id/rb_yiban1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="一般"/>
                <RadioButton
                    android:id="@+id/rb_bumanyi1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="不满意"/>
            </RadioGroup>
        </TableRow>
        <TableRow>
            <TextView
                android:layout_height="60dp"
                android:layout_width="match_parent"
                android:gravity="center_horizontal|center_vertical"
                android:background="@drawable/table_frame_gray"
                android:text="配合事项"/>
            <EditText
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/et_peiheshixiang"
                android:background="@drawable/table_frame_white"
                android:textSize="20sp"/>
        </TableRow>
        <TableRow>
            <TextView
                android:layout_height="60dp"
                android:layout_width="match_parent"
                android:gravity="center_horizontal|center_vertical"
                android:background="@drawable/table_frame_gray"
                android:text="意见栏"/>
            <EditText
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/et_yijianlan"
                android:background="@drawable/table_frame_white"
                android:textSize="20sp"/>
        </TableRow>


    </TableLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="25dp"
        android:paddingLeft="50dp"
        android:paddingRight="50dp"
        android:orientation="horizontal">
        <Button
            android:id="@+id/btn_quren"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@color/orange"
            android:text="确认"
            android:textColor="@color/white"
            android:layout_marginRight="10dp"
            android:layout_weight="1"/>
        <Button
            android:id="@+id/btn_qvxiao"
            android:layout_width="0dp"
            android:background="@color/title"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:text="取消"
            android:textColor="@color/white"
            android:layout_weight="1"/>
    </LinearLayout>

</LinearLayout>