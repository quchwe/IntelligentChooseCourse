<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    tools:context="com.example.administrator.zhihuidianti.activity.LGJ.Dtwbxx_xx_fragmentActivity">
    <RelativeLayout
        android:paddingTop="@dimen/activity_vertical_margin"
        android:paddingRight="25dp"
        android:paddingLeft="25dp"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_000"
            android:text="维保企业："/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="无锡市"
            android:layout_toRightOf="@+id/tv_000"
            android:id="@+id/tv_weibaoqiye_dtzj"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_001"
            android:text="自检日期："
            android:layout_below="@+id/tv_000"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2016-01-01"
            android:layout_below="@+id/tv_weibaoqiye_dtzj"
            android:layout_toRightOf="@+id/tv_001"
            android:id="@+id/tv_zijianriqi_dtzj"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_002"
            android:text="自检人："
            android:layout_below="@+id/tv_001"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="张三"
            android:layout_below="@+id/tv_zijianriqi_dtzj"
            android:layout_toRightOf="@+id/tv_002"
            android:id="@+id/tv_zijianren_dtzj"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_003"
            android:text="自己状态："
            android:layout_below="@+id/tv_002"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="正常"
            android:layout_below="@+id/tv_zijianren_dtzj"
            android:layout_toRightOf="@+id/tv_003"
            android:id="@+id/tv_pingjiaren_dtzj"/>
    </RelativeLayout>
    <ListView
        android:divider="@null"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:id="@id/android:list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    </ListView>

</LinearLayout>