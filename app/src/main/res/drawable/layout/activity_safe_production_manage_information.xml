<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.administrator.zhihuidianti.activity.information.enterprise.SafeProductionManageInformation">
    <android.support.v7.widget.Toolbar
        android:id="@+id/tb_safeProductionManage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/dark_blue">
        <ImageButton
            android:id="@+id/ib_safeProductionManage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/btn_fanhui"
            android:background="@color/dark_blue"/>
        <TextView
            android:id="@+id/tv_safeProTilte"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="企业安全生产会议信息"
            android:layout_marginRight="@dimen/title_margin_right"
            android:gravity="center_horizontal"
            android:textColor="@color/white"
            android:textSize="@dimen/title_text_size"
            />
    </android.support.v7.widget.Toolbar>
    <RelativeLayout
        android:layout_marginTop="15dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <TextView

        android:id="@+id/tv_file"
        android:padding="10dp"
        android:layout_width="110dp"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/tv_fileName"
        android:layout_alignTop="@+id/tv_fileName"
        android:text="文件名"
        android:textSize="16dp"
        android:textColor="@android:color/black"
        android:gravity="center"
        android:layout_centerVertical="true"
        android:background="@drawable/zhengjiao_textview_blue"
        />
    <TextView

        android:id="@+id/tv_fileName"
        android:textColor="@color/black"
        android:textSize="16dp"
        android:layout_width="match_parent"
        android:layout_toRightOf="@+id/tv_file"
        android:padding="10dp"
        android:background="@drawable/zhengjiao_textview"
        android:text="公司管理制度"
        android:layout_height="wrap_content"
        />
    </RelativeLayout>
    <RelativeLayout
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <TextView
            android:id="@+id/tv_safeProbeizhu"
            android:padding="10dp"
            android:layout_width="110dp"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/et_safeProBeizhu"
            android:layout_alignTop="@+id/et_safeProBeizhu"
            android:text="备注"
            android:textSize="16dp"
            android:textColor="@android:color/black"
            android:gravity="center"
            android:layout_centerVertical="true"
            android:background="@drawable/zhengjiao_textview_blue"
            />
        <EditText

            android:id="@+id/et_safeProBeizhu"
            android:textColor="@color/black"
            android:textSize="16dp"
            android:layout_width="match_parent"
            android:layout_toRightOf="@+id/tv_safeProbeizhu"
            android:padding="20dp"
            android:background="@drawable/zhengjiao_textview"

            android:layout_height="wrap_content"
            />
    </RelativeLayout>
    <RelativeLayout
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"

>
        <TextView
            android:id="@+id/tv_safeProUpload"
            android:padding="10dp"
            android:layout_width="110dp"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/tv_safeProUploadfile"
            android:layout_alignTop="@+id/tv_safeProUploadfile"
            android:text="相关资料"
            android:textSize="16dp"
            android:textColor="@android:color/black"
            android:gravity="center"
            android:layout_centerVertical="true"
            android:background="@drawable/zhengjiao_textview_blue"
            />
        <TextView
            android:id="@+id/tv_safeProUploadfile"
            android:textColor="@color/dark_blue"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:paddingRight="20dp"
            android:textSize="16dp"
            android:layout_width="match_parent"
            android:layout_toRightOf="@+id/tv_safeProUpload"
            android:paddingLeft="10dp"
            android:background="@drawable/zhengjiao_textview"
            android:gravity="center"
            android:text="点击上传文件"
            android:drawableLeft="@mipmap/uploadfile"
            android:layout_height="wrap_content"
            />
    </RelativeLayout>
</LinearLayout>
