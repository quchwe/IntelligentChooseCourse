<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical"
              android:weightSum="4">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@mipmap/logo"
        android:layout_weight="1">
        <ImageView
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_above="@+id/tv_welcom1"
            android:layout_centerHorizontal="true"
            android:src="@mipmap/logo_1"/>
        <TextView
            android:id="@+id/tv_yjt1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="易检通电梯版管理系统"
            android:textColor="@color/white"
            android:textSize="@dimen/middle_text"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="15dp"
            android:layout_centerHorizontal="true"
            />
        <TextView
            android:id="@+id/tv_welcom1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/middle_text"
            android:textColor="@color/white"
            android:layout_centerHorizontal="true"
            android:layout_above="@+id/tv_yjt1"
            android:text="欢迎您使用"/>

    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="3"
        android:weightSum="100"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="69.96"
            android:orientation="horizontal"
            android:weightSum="11">
            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="5.90"
                android:layout_margin="3dp"
                android:background="@color/wathet">
                <ImageButton
                    android:id="@+id/ib_task"
                    android:layout_width="90dp"
                    android:layout_height="50dp"
                    android:scaleType="fitXY"
                    android:src="@mipmap/task_logo"
                    android:layout_centerHorizontal="true"
                    android:background="@color/transparent"
                    android:layout_above="@+id/tv_task"/>
                <TextView
                    android:id="@+id/tv_task"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:textSize="@dimen/max_text"
                    android:layout_centerInParent="true"
                    android:text="任务单"/>

            </RelativeLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="5"
                android:weightSum="3"
                android:orientation="vertical">
                <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:layout_margin="3dp"
                android:background="@color/orange">
                    <TextView
                        android:id="@+id/tv_message"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/white"
                        android:layout_centerHorizontal="true"
                        android:layout_alignParentBottom="true"

                        android:textSize="@dimen/max_text"
                        android:text="通知"/>
                    <ImageButton
                        android:id="@+id/ib_message"
                        android:layout_width="90dp"
                        android:layout_height="50dp"
                        android:scaleType="fitXY"
                        android:layout_centerInParent="true"
                        android:background="@color/transparent"
                        android:layout_above="@+id/tv_message"
                        android:src="@mipmap/message_logo"/>
            </RelativeLayout>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="2"
                    android:layout_margin="3dp"
                    android:background="@color/red1">
                    <TextView
                        android:id="@+id/tv_repire"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/white"

                        android:textSize="@dimen/max_text"
                        android:text="急修单"
                        android:layout_below="@+id/ib_repaire"
                        android:layout_centerHorizontal="true" />
                    <ImageButton
                        android:id="@+id/ib_repaire"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:scaleType="fitXY"
                        android:background="@color/transparent"
                        android:src="@mipmap/jixiudan"
                        android:layout_alignParentTop="true"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="26dp" />
                </RelativeLayout>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="25"
            android:weightSum="11"
            android:orientation="horizontal">
            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="6"
                android:layout_margin="3dp"
                android:background="@color/orange">
                <TextView
                    android:id="@+id/tv_fa"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:layout_centerHorizontal="true"
                    android:layout_alignParentBottom="true"

                    android:textSize="@dimen/max_text"
                    android:text="法规普及"/>
                <ImageButton
                    android:id="@+id/ib_fa"
                    android:layout_width="90dp"
                    android:layout_height="50dp"
                    android:scaleType="fitXY"
                    android:layout_centerInParent="true"
                    android:background="@color/transparent"
                    android:layout_above="@+id/tv_fa"
                    android:src="@mipmap/fa"/>

                </RelativeLayout>
            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="5"
                android:layout_margin="3dp"
                android:background="@color/wathet">
                <TextView
                    android:id="@+id/tv_set"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:layout_centerHorizontal="true"
                    android:layout_alignParentBottom="true"

                    android:textSize="@dimen/max_text"
                    android:text="设置"/>
                <ImageButton
                    android:id="@+id/ib_set"
                    android:layout_width="120dp"
                    android:layout_height="50dp"
                    android:scaleType="fitXY"
                    android:layout_centerInParent="true"
                    android:background="@color/transparent"
                    android:layout_above="@+id/tv_set"
                    android:src="@mipmap/setting_logo"/>
            </RelativeLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal"
            android:background="@color/green"
            android:layout_marginTop="5dp"
            android:layout_weight="3.98">
            <ImageButton
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@mipmap/yezhu"
                android:layout_marginTop="7dp"
                android:layout_marginLeft="120dp"
                android:id="@+id/ib_yezhu"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="业主确认"
                android:textSize="22dp"
                android:textColor="@color/white"
                android:layout_marginTop="15dp"/>
        </LinearLayout>
</LinearLayout>

</LinearLayout>
