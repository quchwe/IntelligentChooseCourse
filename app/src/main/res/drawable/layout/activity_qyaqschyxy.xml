<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.administrator.zhihuidianti.activity.information.enterprise.QYAQSCHYXY">

    <android.support.v7.widget.Toolbar
        android:id="@+id/tb_qyaqs_infomation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/dark_blue">
        <ImageButton
            android:id="@+id/ib_qyaqsch_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/btn_fanhui"
            android:background="@color/dark_blue"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="企业安全生产会议信息"
            android:layout_marginRight="@dimen/title_margin_right"
            android:gravity="center_horizontal"
            android:textColor="@color/white"
            android:textSize="@dimen/title_text_size"
            />
    </android.support.v7.widget.Toolbar>
<ListView
    android:layout_marginTop="15dp"
    android:id="@+id/lv_qiyeaqList1"
    android:divider="@null"
    android:layout_below="@+id/tb_qyaqs_infomation"
    android:layout_marginLeft="5dp"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"></ListView>
    <ListView
        android:layout_below="@+id/lv_qiyeaqList1"
        android:divider="@null"
        android:layout_marginTop="5dp"
        android:id="@+id/lv_qiyeaqList"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    </ListView>
    <RelativeLayout

                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:layout_below="@+id/lv_qiyeaqList"
        android:layout_alignLeft="@+id/lv_qiyeaqList"
        android:layout_alignRight="@+id/lv_qiyeaqList">
        <TextView
            android:id="@+id/tv_safeProUpload"
            android:padding="10dp"
            android:layout_width="110dp"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/tv_safeProUploadfile"
            android:layout_alignTop="@+id/tv_safeProUploadfile"
            android:text="相关资料"
            android:textSize="16dp"
            android:textColor="@android:color/black"
            android:gravity="center"
            android:layout_centerVertical="true"
            android:background="@drawable/zhengjiao_textview_blue"
            />
        <TextView
            android:id="@+id/tv_safeProUploadfile"
            android:textColor="@color/dark_blue"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:paddingRight="20dp"
            android:textSize="16dp"
            android:layout_width="match_parent"
            android:layout_toRightOf="@+id/tv_safeProUpload"
            android:paddingLeft="10dp"
            android:background="@drawable/zhengjiao_textview"
            android:gravity="center"
            android:text="点击上传文件"
            android:drawableLeft="@mipmap/uploadfile"
            android:layout_height="wrap_content"
            />
    </RelativeLayout>
</RelativeLayout>
