    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingTop="30dp"
        android:paddingRight="@dimen/activity_horizontal_margin">
        <Button
            android:id="@+id/btn_chaxun_diantizijianmingxi"
            android:layout_width="0dp"
            android:layout_height="35dp"
            android:textSize="@dimen/main_text_size"
            android:text="查询"
            android:textColor="@color/white"
            android:background="@drawable/button"
            android:layout_weight="1"
            android:layout_marginTop="@dimen/biankuangjvli"
            android:layout_marginLeft="@dimen/biankuangjvli"/>
        <Button
            android:id="@+id/btn_excel_diantizijianmingxi"
            android:layout_width="0dp"
            android:layout_height="35dp"
            android:textSize="@dimen/main_text_size"
            android:text="Excel"
            android:textColor="@color/white"
            android:background="@drawable/button"
            android:layout_weight="1"
            android:layout_marginTop="@dimen/biankuangjvli"
            android:layout_marginLeft="10dp"/>
        <Button
            android:id="@+id/btn_tixing_diantizijianmingxi"
            android:layout_width="0dp"
            android:layout_height="35dp"
            android:textSize="@dimen/main_text_size"
            android:text="隐患整改提醒"
            android:textColor="@color/white"
            android:background="@drawable/button"
            android:layout_weight="1.5"
            android:layout_marginTop="@dimen/biankuangjvli"
            android:layout_marginLeft="10dp"/>
